<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp">


        <ImageView
            android:id="@+id/img_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/notification_96"
            android:padding="20dp"
            android:background="@color/grey"
            android:tint="@android:color/holo_red_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_notify"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_notify_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="Cash/Card On Delivery"
                android:textColor="@color/dark_grey"


                />

            <TextView
                android:id="@+id/tv_notify_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="@string/sample_text"
                android:textColor="@color/dark_grey"


                />

            <TextView
                android:id="@+id/tv_notify_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="12.02.2018"
                android:textColor="@color/dark_grey"


                />



        </LinearLayout>



    </RelativeLayout>

</LinearLayout>